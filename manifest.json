{
  "manifest_version": 3,
  "name": "Open Reddit images directly",
  "version": "0.0.5",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://i.redd.it/*",
    "*://preview.redd.it/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "open-images-directly-on-i-redd-it@dragory.net"
    }
  }
}
